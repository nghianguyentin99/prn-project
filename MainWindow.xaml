<Window x:Class="PCShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shared="clr-namespace:PCShop.View.Shared"
        xmlns:local="clr-namespace:PCShop"
        mc:Ignorable="d"
        Title="Hệ thống quản lý kho - PCShop"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A6572"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="#f4f4f4">

        <shared:Header x:Name="MainHeader" DockPanel.Dock="Top"/>

        <Border DockPanel.Dock="Left" Background="#34495E" Width="220" BorderBrush="#2C3E50" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Vertical" Margin="5">

                <Button x:Name="btnDashboard" Content="Tổng quan" Click="NavButton_Click" Style="{StaticResource NavButton}"/>

                <TextBlock Text="NGHIỆP VỤ" Foreground="#95A5A6" FontSize="11" FontWeight="Bold" Margin="10,15,10,5"/>
                <Button x:Name="btnProductManagement" Content="Quản lý Sản phẩm" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnStockEntry" Content="Quản lý Nhập kho" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnStockExport" Content="Quản lý Xuất kho" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnInventory" Content="Quản lý Tồn kho" Click="NavButton_Click" Style="{StaticResource NavButton}"/>

                <Separator x:Name="AdminSeparator" Margin="0,15" Background="#7F8C8D"/>
                <TextBlock x:Name="AdminTitle" Text="QUẢN TRỊ HỆ THỐNG" Foreground="#95A5A6" FontSize="11" FontWeight="Bold" Margin="10,0,10,5"/>
                <Button x:Name="btnUserManagement" Content="Quản lý Người dùng" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnCategoryManagement" Content="Quản lý Danh mục" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnSupplierManagement" Content="Quản lý Nhà Cung Cấp" Click="NavButton_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnReport" Content="Báo cáo - Thống kê" Click="NavButton_Click" Style="{StaticResource NavButton}"/>

            </StackPanel>
        </Border>

        <ContentControl x:Name="MainContent" Margin="20"/>

    </DockPanel>
</Window>