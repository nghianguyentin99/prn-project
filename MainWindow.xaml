<Window x:Class="PCShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shared="clr-namespace:PCShop.View.Shared"
        xmlns:local="clr-namespace:PCShop"
        mc:Ignorable="d"
        Title="Hệ thống quản lý kho - PCShop"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
   <!-- Container chính là DockPanel -->
    <DockPanel LastChildFill="True" Background="#f4f4f4">

        <!-- Header nằm trên cùng -->
        <shared:Header DockPanel.Dock="Top"/>

        <!-- Footer nằm dưới cùng (nếu có) -->
        <!--<shared:Footer DockPanel.Dock="Bottom"/>-->

        <!-- Khu vực nội dung chính -->
        <Grid Margin="20">
            <TextBlock Text="Nội dung chính hiển thị ở đây"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>
    </DockPanel>
</Window>
