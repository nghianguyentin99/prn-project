<UserControl x:Class="PCShop.View.StockEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCShop.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White"
             Loaded="UserControl_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Thông tin phiếu nhập" Padding="5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Nhà cung cấp:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbSupplier" Margin="5"
                          DisplayMemberPath="Name" 
                          SelectedValuePath="SupplierID" />

                <Label Grid.Row="0" Grid.Column="2" Content="Kho nhập:" VerticalAlignment="Center" Margin="5"/>
                <ComboBox Grid.Row="0" Grid.Column="3" x:Name="cmbWarehouse" Margin="5"
                          DisplayMemberPath="WarehouseName" 
                          SelectedValuePath="WarehouseID" />

                <Label Grid.Row="1" Grid.Column="0" Content="Ghi chú:" VerticalAlignment="Top" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtNote" Margin="5"
                         Height="40" TextWrapping="Wrap" AcceptsReturn="True" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Thêm sản phẩm" Padding="5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" x:Name="cmbMasterProductList" Margin="5"
                          DisplayMemberPath="Name" 
                          SelectedValuePath="ProductID"
                          ToolTip="Chọn sản phẩm từ danh sách" />

                <TextBox Grid.Column="1" x:Name="txtQuantity" Margin="5,5,0,5" Width="80" ToolTip="Số lượng" />
                <TextBox Grid.Column="2" x:Name="txtUnitPrice" Margin="5,5,0,5" Width="100" ToolTip="Đơn giá" />

                <Button Grid.Column="3" x:Name="btnAddProductToList" Content="Thêm vào phiếu" 
                        Margin="5" Padding="10,5" Click="btnAddProductToList_Click" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Chi tiết phiếu nhập" Padding="5">
            <DataGrid x:Name="dgProductsToAdd" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID SP" Binding="{Binding ProductId}" Width="Auto" />
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*" />
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="Auto" />
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat='N0'}" Width="Auto" />
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding TotalPrice, StringFormat='N0'}" Width="Auto" />
                    <DataGridTemplateColumn Header="Xóa">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnRemoveItem" Content="Xóa" Click="btnRemoveItem_Click" Tag="{Binding ProductId}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <Button Grid.Row="3" x:Name="btnSaveEntry" Content="Lưu Phiếu Nhập" 
                Margin="0,10,0,0" Padding="15,5" 
                HorizontalAlignment="Right" 
                FontWeight="Bold" 
                Click="btnSaveEntry_Click"/>
    </Grid>
</UserControl>